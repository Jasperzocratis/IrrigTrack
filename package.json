{
  "name": "irrigtrack",
  "version": "1.0.0",
  "description": "IrrigTrack - Multi-component application with Laravel backend, Vue.js frontend, and Python ML API",
  "private": true,
  "workspaces": [
    "frontend-vue"
  ],
  "scripts": {
    "install-frontend": "cd frontend-vue && npm install",
    "build-frontend": "cd frontend-vue && npm run build",
    "dev-frontend": "cd frontend-vue && npm run dev",
    "start": "cd frontend-vue && npm run preview -- --host 0.0.0.0 --port $PORT",
    "build": "cd frontend-vue && npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

